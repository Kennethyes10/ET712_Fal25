//Exercise 2
function checkNum() {
    let input;
    let number;
    
    while (true) {
        input = prompt("Enter a number:");

        // trying to convert input to a number
        number = parseInt(input);

        // check that the input is a valid number
        if (!isNaN(number) && input.trim () !== "") {
            break;
        }
alert("invalid input. Please enter a valid number.");
    }
    // if it is an even number and false if it is an odd number 
    return number % 2 === 0;
}

let result= checkNum();
console.log("is the number even? " + result);




