//Exercise 1
function name_counting(length) {
// Array names
let names = ["Ann", "Peter", "Patricia","Sam","Katerina"];

if (length !== names.length) {
    console.log("the length doesnt match.");
return;
}

//  read an array with names and return the number of names that has less than 5 characters.
let count = 0;
for(let i = 0; i < names.length; i++) {
    if (names[i].length < 5) {
        count++;
    }
}

return count;
}

let = name_counting(5);
