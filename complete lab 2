console.log("/n---- example 1: array -----")
// create and initialize an array
let fruits = ["apples", "orange" , "grapes" , "kiwi" , "pineapple"]
console.log(`the 3rd fruit = ${fruits [2]}`)
console.log(`there is/are ${fruits.length} fruits/s in the list`)
// remove the 1st element in array fruits using method ' shift()'
console.log(`original; array ${fruits}`)
fruits.shift()
console.log(` remove the 1st element in array fruits = ${fruits}`)
// add elements to the array\
fruits.unshif(25, "mango", true)
console.log(` update array with three new elements = ${fruits}`)
// add elemnts to the end (right) of an array
fruits.push("PETER", 100)
console.log(`update array with two new elements to the right= ${fruits}`)
// find the index of an element
let index_blueberries = fruits.indexof("blueberries")
console.log(`what is the index of 'blueberrries'? ${index_blueberries}`)
// if the return index= -1, then the element doesn't exist in the array
let index_PETER = fruits.indexOF("PETER")
console.log(`what is the index of 'blueberrries'? ${index_PETER}`)

