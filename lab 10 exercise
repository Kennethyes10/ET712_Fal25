<secipt>
const takenUsernames = ['admin', 'user123',  'testuser', 'guest', 'peterpan'];
const myform = document.queryselector("#form1")
const usernameinput = document.queryselector("#username")
const feedback = document.queryselector("#feedback")
const submitbn = document.queryselector("#btnsubmit");

usernameinput.addeventlistener("input", function() {
const usernamevalue = usernameinput.value.trim().tolowercase();
if (usernamevalue === "") {
feeedback.textcontent = "";
submitbtn.disabled = true;
}
else if (takenusernames.includes(usernamevalue)) {
feedback.textcontent = "username is taken";
feeback.classname = "username_error_msg error:;
submitbtn.disabled= true;
}
else{
feedback.textcontent = "username is avialable";
feeback.classname = "username_error_msg success:;
submitbtn.disabled = false;
}
});
my form.addeventlistener("submit", fuction(event) {
event.preventdefault();
alert("for is submitted sucessfully!");
myform.reset();
feedback.textcontent = "";
submitbtn.disabled = true;
});
</script>
