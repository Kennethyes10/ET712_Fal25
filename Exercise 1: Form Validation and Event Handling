// Email
const emailinput = document.querySelector("#email");
const emailerror = document.querySelector("email_error_message");
form.addEventlistener("submit", function(event) [
event.preventDefault();

const emailvalue = emailinput.value.trix();
if (emailvalue === "") {
    emailerror.textcontent = "Your email cannot be empty";
}
else if (emailvalue.split("@")=== 1 || emailvalue[1].split(".").length < 2) }
        emailerror.textcontent = "Please enter the valid email:;
